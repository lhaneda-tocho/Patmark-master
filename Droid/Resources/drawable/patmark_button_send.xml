<?xml version="1.0" encoding="UTF-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Buttonが押された時 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" > 
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/patmark_main" /> 
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
				<inset xmlns:android="http://schemas.android.com/apk/res/android"  
                    android:inset="4dp"> 
					<bitmap
                        android:gravity="center|fill"
                        android:src="@drawable/patmark_orange_send" />
                </inset>
            </item>
        </layer-list>
    </item>
    
    <!-- Buttonが押されてない時 -->
    <item android:state_pressed="false">
		<layer-list>
			<item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" > 
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/patmark_suppressed" /> 
                    <corners android:radius="3dp" />
                </shape>
			</item>
			<item>
				<inset xmlns:android="http://schemas.android.com/apk/res/android"  
                    android:inset="4dp"> 
                    <bitmap
                        android:gravity="center|fill"
                        android:src="@drawable/patmark_gray_send" />
				</inset>
			</item>
		</layer-list>
	</item>

    <!-- Buttonにフォーカスがあたった時 -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" > 
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/patmark_suppressed" /> 
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item>
        		<inset xmlns:android="http://schemas.android.com/apk/res/android"
					android:inset="4dp"> 
                    <bitmap
                        android:gravity="center|fill"
                        android:src="@drawable/patmark_gray_send" />
                </inset>
            </item>
        </layer-list>
	</item> 

</selector>