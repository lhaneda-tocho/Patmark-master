<?xml version="1.0" encoding="UTF-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Buttonが押された時 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#00FFFFFF" />
                    <padding android:bottom="4dp" android:left="4dp"
                        android:right="4dp" android:top="4dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#ffcccccc" />
                    <stroke 
                        android:width="1dp" 
                        android:color="#ff999999" /> 
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Buttonが押されてない時 -->
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#00FFFFFF" />
                    <padding android:bottom="4dp" android:left="4dp"
                        android:right="4dp" android:top="4dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#ffffffff" />
                    <stroke 
                        android:width="1dp" 
                        android:color="#ff999999" /> 
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Buttonにフォーカスがあたった時 -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#00FFFFFF" />
                    <padding android:bottom="4dp" android:left="4dp"
                        android:right="4dp" android:top="4dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="#ffccccff" />
                    <stroke 
                        android:width="1dp" 
                        android:color="#ff999999" /> 
                    
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item> 

</selector>
