<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/actionsheet_retrieve"
        android:background="@drawable/actionsheet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_retrieve"
        android:gravity="center"
        android:layout_weight="1" />
    <Button
        android:id="@+id/actionsheet_replace"
        android:background="@drawable/actionsheet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_replace"
        android:textSize="@dimen/action_sheet_button_textsize"
        android:gravity="center"
        android:layout_weight="1" />
    <Button
        android:id="@+id/actionsheet_rename"
        android:background="@drawable/actionsheet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_rename"
        android:gravity="center"
        android:layout_weight="1" />
</LinearLayout>